        "urn:oasis:names:tc:dita:xsd:tblDeclGrp.xsd"
        dita:var [ presep = ":" name = "ditaver" ]
      ]
      "\x{a}" ~
      "       "
      dita:rncMod [
        "urn:oasis:names:tc:dita:rnc:tblDeclMod.rnc"
        dita:var [ presep = ":" name = "ditaver" ]
      ]
      "\x{a}" ~
      "       "
      dita:rngMod [
        "urn:oasis:names:tc:dita:rng:tblDeclMod.rng"
        dita:var [ presep = ":" name = "ditaver" ]
      ]
      "\x{a}" ~
      "     "
